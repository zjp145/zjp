<?xml version="1.0" encoding="utf-8"?>
<!--领导日程-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/view_cr"
    android:orientation="vertical"
    tools:context="com.zhang.sqone.home.LeadAgendaActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dengle_action_height"
        android:background="@color/rul_bj" />

    <com.zhang.sqone.views.TitleBarView
        android:id="@+id/txl_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="领导日程"></com.zhang.sqone.views.TitleBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/left1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginRight="60dp"
            android:src="@mipmap/left1"/>
        <TextView
            android:id="@+id/rq_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:textColor="#484848"
            android:text="2016-5-30"
            />
        <ImageView
            android:id="@+id/right1_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:src="@mipmap/right1"
            />
    </LinearLayout>
    <!-- cacheColorHint：系统默认拖动过程中列表背景是黑的,设置为透明 -->
    <ExpandableListView
        android:id="@+id/lingdaorc_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="#00000000"
        android:background="@color/view_cr"
        android:dividerHeight="1dp"
        >
    </ExpandableListView>

</LinearLayout>
