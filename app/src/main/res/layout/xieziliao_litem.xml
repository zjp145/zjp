<?xml version="1.0" encoding="utf-8"?>

<!--收邮件使用的列表-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/linearlayout_br"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dbgw_item_left"
        android:layout_marginRight="@dimen/dbgw_item_right"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/xieyoujian_iamgef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:src="@mipmap/youfujian"
            android:layout_marginTop="@dimen/top_1"
            android:layout_marginRight="@dimen/item_title_right2"
            >
        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <TextView
                    android:id="@+id/xieyoujian_title"
                    style="@style/title_text"
                    android:layout_marginTop="@dimen/top_2"
                     />
            <TextView
                android:id="@+id/xieyoujian_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#666"
                android:textSize="11dp"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/top_3"
                    android:layout_marginRight="@dimen/item_title_right2"
                    android:src="@mipmap/time" />

                <TextView
                    android:id="@+id/xieyoujian_time"
                    style="@style/ss_lint_text"
                    android:layout_marginTop="@dimen/top_4"
                     />

            </LinearLayout>
            <LinearLayout
                android:id="@+id/hyap_cx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/wz_ts_top"
                android:gravity="center_vertical"
                android:layout_gravity="right"
                android:visibility="gone"
                android:orientation="horizontal"
                >
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/item_title_right2"
                    android:src="@mipmap/fujin" />

                <TextView
                    android:id="@+id/banshi_fj"
                    style="@style/ss_lint_text"
                    android:text="3个附件" />

            </LinearLayout>


        </LinearLayout>



    </LinearLayout>
    <LinearLayout
        android:id="@+id/xieyoujian_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center"
        android:focusable="false"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="@dimen/d_dbgw_item_left"
        android:layout_marginRight="@dimen/dbgw_item_right"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="阅读人员"
            />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:src="@mipmap/yuding_you"
            />
    </LinearLayout>

</LinearLayout>