<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout_br"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iamge_hyyd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:layout_marginLeft="14dp"
        android:src="@mipmap/huiyi_xiao" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="19dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="19dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/huiyiyd_title"
            style="@style/title_text"
            android:layout_marginBottom="12dp"
             />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/wushebei"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/linearlayout_br"
                android:src="@mipmap/wu" />

            <ImageView
                android:id="@+id/shexiangtou"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/linearlayout_br"
                android:src="@mipmap/shexiangtou" />

            <ImageView
                android:id="@+id/touyingyi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/linearlayout_br"
                android:src="@mipmap/touyingyi" />

            <ImageView
                android:id="@+id/yixiang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:background="@drawable/linearlayout_br"
                android:src="@mipmap/yinxiang" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/yuding_yuding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="14dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp"
            android:src="@mipmap/huiyi_yuding" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="预定"
            android:textColor="@color/c_fb8472"
            android:textSize="@dimen/font_12" />
    </LinearLayout>
</LinearLayout>