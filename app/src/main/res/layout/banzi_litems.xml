<?xml version="1.0" encoding="utf-8"?>

<!--班子会议查询列表-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/linearlayout_br"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dbgw_item_left"
        android:layout_marginRight="@dimen/dbgw_item_right"
        android:orientation="horizontal">
        <CheckBox
            android:id="@+id/bzhy_sb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="21dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="4dp"
            android:button="@drawable/hyfw_xzq"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/banzichaxun_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:src="@mipmap/gongzi"
            android:layout_marginTop="26dp"
            android:layout_marginRight="13dp"

            >
        </ImageView>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="26dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/banzhi1_title"
                style="@style/title_text"
                android:layout_marginTop="23dp"

                />
            <TextView
                android:id="@+id/banzhi1_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:textColor="#aeaeae"
                android:textSize="11dp"

                />
            <LinearLayout
                android:id="@+id/lint1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/caozuo_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="11dp"
                    android:text="操作 >"
                    />
                <TextView
                    android:id="@+id/jieshu_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:visibility="gone"
                    android:textSize="11dp"
                    android:text="结束 >"
                    />

            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            >
            <TextView
                android:id="@+id/banzhi1_shenhe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11dp"

                />


        </LinearLayout>



    </LinearLayout>


</LinearLayout>