<!--设置页面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/view_cr"
    android:orientation="vertical"
    tools:context="com.zhang.sqone.my.SetUpActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dengle_action_height"
        android:background="@color/rul_bj" />

    <com.zhang.sqone.views.TitleBarView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/shezhi"></com.zhang.sqone.views.TitleBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_height_item"
        android:background="@drawable/linearlayout_strok"
        android:layout_marginTop="@dimen/my_item_top"
        android:gravity="center_vertical"

        android:orientation="horizontal">

        <TextView
            style="@style/title_text"
            android:layout_marginLeft="@dimen/my_left_item"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="自动登录"
            />


        <ImageButton
            android:id="@+id/shezhi_dl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_jiant_left"
            android:layout_marginRight="@dimen/my_left_item"
            android:background="@null"
            android:src="@mipmap/on"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/shezhi_qlhc"
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_height_item"
        android:background="@drawable/linearlayout_strok"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/my_item_top"
        android:orientation="horizontal">

        <TextView
            style="@style/title_text"
            android:layout_marginLeft="@dimen/my_left_item"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="清理缓存"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_jiant_left"
            android:layout_marginRight="@dimen/my_left_item"
            android:src="@mipmap/arrow"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_height_item"
        android:background="@drawable/linearlayout_strok"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/my_item_top"
        android:orientation="horizontal">

        <TextView
            style="@style/title_text"
            android:layout_marginLeft="@dimen/my_left_item"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="意见反馈"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="@dimen/my_left_item"
            android:src="@mipmap/arrow"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/my_height_item"
        android:background="@drawable/linearlayout_strok"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/my_item_top"
        android:orientation="horizontal">

        <TextView
            style="@style/title_text"
            android:layout_marginLeft="@dimen/my_left_item"
            android:layout_weight="1"
            android:textSize="13dp"
            android:text="消息推送"
            />

        <ImageButton
            android:id="@+id/shezhi_ts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/my_jiant_left"
            android:layout_marginRight="@dimen/my_left_item"
            android:background="@null"
           android:src="@mipmap/off"
            />
    </LinearLayout>

</LinearLayout>
