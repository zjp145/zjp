<?xml version="1.0" encoding="utf-8"?>
<!--天竺期刊使用的list展示item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout_br"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/tzqk_iamge"
        android:layout_marginTop="11dp"
        android:layout_width="75dp"
        android:layout_height="101dp"
        android:scaleType="fitXY"
        android:background="@drawable/linearlayout_br"
        android:src="@mipmap/zhnwei2"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="11dp"
        android:layout_marginRight="12dp"
        />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginTop="18dp"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tzqk_title_text"
            style="@style/keshi_liebiao_text1"

            android:textSize="@dimen/font_14"
            android:maxEms="13"

            android:layout_marginBottom="29dp"

            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:orientation="horizontal"
            >
            <TextView
                style="@style/keshi_liebiao_text2"
                android:text="作者:"
                />
            <TextView
                android:id="@+id/tzqk_zz"
                style="@style/keshi_liebiao_text2"
                android:layout_marginRight="13dp"

                />
            <TextView
                style="@style/keshi_liebiao_text2"
                android:text="供图:"
                />
            <TextView
                android:id="@+id/tzqk_gt"
                style="@style/keshi_liebiao_text2"

                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/item_title_right2"
                android:src="@mipmap/time" />

            <TextView
                android:id="@+id/tzqk_t"
                style="@style/ss_lint_text"
                 />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="68dp"
        android:layout_marginRight="14dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        >
        <com.zhang.sqone.views.MasterLayout
            android:id="@+id/qikan_xz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            ></com.zhang.sqone.views.MasterLayout>
        <ImageButton
            android:id="@+id/tzqk_dk_iamge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/dakai"
            android:background="@null"
            android:visibility="gone"
            />
        <TextView
            android:id="@+id/tzqk_dx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7kb"
            />
    </LinearLayout>
</LinearLayout>