<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal|bottom"
    android:background="@color/background"
    android:orientation="vertical" >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <LinearLayout
            android:id="@+id/update_icon_pick_photo"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sex_pop_hei"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="从相册选择"
                android:textColor="@color/text_888"
                android:textSize="@dimen/text_size">
            </TextView>
        </LinearLayout>
        <View style="@style/line_style" />
        
        <LinearLayout
            android:id="@+id/update_icon_photograph"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sex_pop_hei"
            android:gravity="center"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="相机拍照"
                android:textColor="@color/text_888"
                android:textSize="@dimen/text_size" >
            </TextView>
        </LinearLayout>
         <View style="@style/line_style" />
        
        <LinearLayout
            android:id="@+id/update_icon_cancle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/sex_pop_hei"
            android:gravity="center"
            android:layout_marginBottom="@dimen/item_bottom"
            android:orientation="vertical" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="取消选择"
                android:textColor="@color/text_888"
                android:textSize="@dimen/text_size"  >
            </TextView>
        </LinearLayout>
         <View style="@style/line_style" />
        
        
    </LinearLayout>

</LinearLayout>