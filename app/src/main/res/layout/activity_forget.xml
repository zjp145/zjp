<!--忘记密码界面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/font_fff"
    tools:context="com.zhang.sqone.my.ForgetActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dengle_action_height"
        android:background="@color/rul_bj"
        />
    <com.zhang.sqone.views.TitleBarView
        android:id="@+id/zc_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wujimima"
        ></com.zhang.sqone.views.TitleBarView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dengle_wz_top"
        android:layout_marginLeft="@dimen/dengle_left_right"
        android:layout_marginRight="@dimen/dengle_left_right"
        android:orientation="vertical"
        >
        <TextView
            style="@style/title_text"
            android:text="用户账号"
            />
        <EditText
            android:id="@+id/zc_phone"
            style="@style/denglu_phone_text"
            android:layout_marginTop="@dimen/denglu_phone_top"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/denglu_phone_view"
            android:hint="请输入账号"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            />

        <TextView
            style="@style/title_text"
            android:layout_marginTop="@dimen/denglu_mima_top"
            android:text="验证码"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/denglu_phone_top"
            android:layout_marginBottom="@dimen/denglu_phone_view"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            >
            <EditText
                android:id="@+id/zc_yzm"
                style="@style/denglu_phone_text"
                android:layout_weight="1"
                android:background="@null"
                android:layout_width="match_parent"
                android:inputType="phone"
                android:numeric="integer"
                android:hint="请输入验证码"
                />
            <Button
                android:id="@+id/zc_yzm_button"
                android:layout_width="72dp"
                android:layout_height="22dp"
                android:background="@drawable/yan_zheng_ma_button"
                android:text="获取验证码"
                android:textColor="#b0b0b0"
                android:textSize="12dp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            />
        <TextView
            android:id="@+id/zc_xmm"
            style="@style/title_text"
            android:layout_marginTop="@dimen/denglu_mima_top"
            android:text="新密码"
            />
        <EditText
            android:id="@+id/zc_xmm_e"
            style="@style/denglu_phone_text"
            android:layout_marginTop="@dimen/denglu_phone_top"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_marginBottom="@dimen/denglu_phone_view"
            android:hint="请输入您的新密码"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            />
        <TextView
            android:id="@+id/zc_qrxmm"
            style="@style/title_text"
            android:layout_marginTop="@dimen/denglu_mima_top"
            android:text="确认新密码"
            />
        <EditText
            android:id="@+id/zc_qrxmm_e"
            style="@style/denglu_phone_text"
            android:layout_marginTop="@dimen/denglu_phone_top"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_marginBottom="@dimen/denglu_phone_view"
            android:hint="请再次输入您的新密码"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            />

        <LinearLayout
            android:id="@+id/di_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone"
            android:layout_marginTop="21dp"
            >
            <CheckBox
                android:id="@+id/zc_mxy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="6dp"
                android:button="@drawable/zc_xzq"
                android:layout_gravity="center_vertical"
                />
            <TextView
                android:id="@+id/zc_xy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12dp"
                android:hint="我已阅读并同意《智慧天竺许可以及服务协议》"
                android:layout_gravity="center_vertical"

                />

        </LinearLayout>
        <Button
            android:id="@+id/zc_dl"
            style="@style/denglu_button"
            android:text="确认"
            android:textColor="@color/font_fff"
            android:layout_marginTop="@dimen/denglu_button_top"
            android:textSize="@dimen/font_14"

            />

</LinearLayout>
</LinearLayout>