
<!--登录界面-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/font_fff"
    tools:context="com.zhang.sqone.my.LoginActivity">
<View
    android:layout_width="match_parent"
    android:layout_height="@dimen/dengle_action_height"
    android:background="@color/rul_bj"
    />
<com.zhang.sqone.views.TitleBarView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:leftButtonEnable="false"
    android:text="@string/denglu"
    ></com.zhang.sqone.views.TitleBarView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dengle_wz_top"
        android:layout_marginLeft="@dimen/dengle_left_right"
        android:layout_marginRight="@dimen/dengle_left_right"
        android:orientation="vertical"
        >
        <TextView
           style="@style/title_text"

            android:text="用户名/手机号"
            />
        <EditText
            android:id="@+id/dl_phone"
           style="@style/denglu_phone_text"
            android:layout_marginTop="@dimen/denglu_phone_top"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/denglu_phone_view"
            android:hint="请输入用户名或手机号"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            />

        <TextView
            style="@style/title_text"
            android:layout_marginTop="@dimen/denglu_mima_top"
            android:text="密码"
            />
        <EditText
            android:id="@+id/dl_poss"
            style="@style/denglu_phone_text"
            android:layout_marginTop="@dimen/denglu_phone_top"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:layout_width="match_parent"
            android:inputType="textPassword"
            android:layout_marginBottom="@dimen/denglu_phone_view"
            android:hint="请输入密码"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/view_color"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/denglu_wuji_top"
            android:layout_marginLeft="2dp"
            >

                <CheckBox
                    android:id="@+id/dl_mxy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="6dp"
                    android:button="@drawable/zc_xzq"
                    android:layout_gravity="center_vertical"
                    />
                <TextView
                    android:id="@+id/dl_jjmm"
                    style="@style/denglu_wjma"
                    android:gravity="center_vertical"
                    android:layout_marginRight="@dimen/denglu_wuji_x"
                    android:text="记住密码"
                    />
            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1"
                />
            <TextView
                android:id="@+id/dl_wjmm"
                style="@style/denglu_wjma"
                android:gravity="center_vertical"
                android:layout_marginRight="@dimen/denglu_wuji_x"
                android:text="忘记密码？"
                />
            <View
                android:layout_width="1dp"
                android:layout_height="@dimen/text_title_size"
                android:visibility="gone"
                android:background="@color/rul_bj"
                />
            <TextView
                android:id="@+id/dl_zc"
                style="@style/denglu_wjma"
                android:visibility="gone"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/denglu_wuji_x"
                android:text="新用户注册"
                />

        </LinearLayout>
        <Button
            android:id="@+id/dl_dl_button"
            style="@style/denglu_button"
            android:text="登录"
            android:textColor="@color/font_fff"
            android:layout_marginTop="@dimen/denglu_button_top"
            android:textSize="@dimen/font_14"

          />
