<?xml version="1.0" encoding="utf-8"?><!--通知公告使用的item-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout_br"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/tzgg_iamge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="18dp"
        android:layout_marginRight="12dp"
        android:src="@mipmap/tzgg_weidu"
        />
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
        android:layout_marginRight="14dp"
        android:orientation="vertical"
        >
            <TextView
                android:id="@+id/tzgg_title"
                style="@style/title_text"
                android:layout_weight="1"
                />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
android:gravity="center_vertical"
            android:layout_marginBottom="18dp"
            >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/time"

                android:layout_marginRight="6dp"
                />
            <TextView
                android:id="@+id/tzgg_time"
                style="@style/ss_lint_text"

                />
        </LinearLayout>

        <TextView
            android:id="@+id/tzgg_con"
            style="@style/ss_lint_text"
            android:textSize="12dp"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"

            />

    </LinearLayout>


</LinearLayout>