<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/linearlayout_br"
    android:orientation="horizontal">
    <!--绿色的布局-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="18dp"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <View
                android:id="@+id/shang_view"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/view_color1"
                android:layout_weight="1"
                />
            <ImageView
                android:id="@+id/liucheng_tp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/lcicon"
                />
            <View
                android:id="@+id/xia_view"
                android:layout_width="1dp"
                android:layout_height="30dp"
                android:background="@color/view_color1"
                android:layout_weight="1"
                />

        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19.3dp"
        android:layout_marginLeft="21dp"
        android:orientation="vertical"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:orientation="horizontal"
            >
            <TextView
                android:id="@+id/time_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                />

        </LinearLayout>
        <TextView
            android:id="@+id/neirong_liucheng_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"

            />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grid_cr"
            />

    </LinearLayout>
</LinearLayout>